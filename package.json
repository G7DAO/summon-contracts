{
    "name": "achievo-contracts",
    "version": "0.12.2",
    "description": "Smart contracts for achievo.xyz",
    "scripts": {
        "localChain": "hardhat --config hardhat.config.ts node",
        "clean": "hardhat --config hardhat.config.ts clean",
        "compile": "hardhat --config hardhat.config.ts compile",
        "accounts": "hardhat --config hardhat.config.ts accounts",
        "generate": "hardhat --config hardhat.config.ts generate",
        "compile:zkSync": "hardhat --config zkSync.config.ts compile --network zkSyncTestnet",
        "deploy:ZkSync:mainnet": "pnpm compile:zkSync && hardhat --config zkSync.config.ts deploy --network zkSync --chain zkSync",
        "deploy:ZkSync:testnet": "pnpm compile:zkSync && hardhat --config zkSync.config.ts deploy --network zkSyncTestnet --chain zkSyncTestnet",
        "deployAvatarBound:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname AvatarBound",
        "deployAvatarBound:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname AvatarBound",
        "deployAvatarBoundUpgradeable:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname AvatarBoundV1",
        "deployAvatarBoundUpgradeable:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname AvatarBoundV1",
        "upgradeAvatarBound:ZkSync:testnet": "pnpm compile:zkSync && hardhat run deploy/upgrades/upgradeAvatarBound.testnet.ts --config zkSync.config.ts --network zkSyncTestnet",
        "deployItemsBound:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname ItemBound",
        "deployItemsBound:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname ItemBound",
        "deployItemsBoundUpgradeable:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname ItemBoundV1",
        "deployItemsBoundUpgradeable:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname ItemBoundV1",
        "upgradeItemBound:ZkSync:testnet": "pnpm compile:zkSync && hardhat run deploy/upgrades/upgradeItemBound.testnet.ts --config zkSync.config.ts --network zkSyncTestnet",
        "deployLevelsOnChain:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname LevelsBound",
        "deployLevelsOnChain:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname LevelsBound",
        "deployLevelsOnChainUpgradable:ZkSync:mainnet": "npm run deploy:ZkSync:mainnet -- --contractname LevelsBoundV1",
        "deployLevelsOnChainUpgradable:ZkSync:testnet": "npm run deploy:ZkSync:testnet -- --contractname LevelsBoundV1",
        "deployNftGating:ZkSync:testnet": "pnpm compile:zkSync && hardhat --config zkSync.config.ts deploy-zksync --network zkSyncTestnet --script deployNFTGating.testnet.ts",
        "deployERC20Paymaster:ZkSync:testnet": "pnpm compile:zkSync && hardhat --config zkSync.config.ts deploy-zksync --network zkSyncTestnet --script deployERC20Paymaster.testnet.ts",
        "deploySoulboundBadges:ZkSync:testnet": "pnpm compile:zkSync && hardhat --config zkSync.config.ts deploy-zksync --network zkSyncTestnet --script deploySoulboundBadges.testnet.ts",
        "deployGameSummary:mumbai": "hardhat --config polygon.config.ts run scripts/deployGameSummary1155.ts --network mumbai",
        "deployGameSummary:wadsley": "hardhat --config mantle.config.ts run scripts/deployGameSummary1155.ts --network mantleWadsley",
        "test": "REPORT_GAS=true hardhat --config hardhat.config.ts test test/*.ts --network hardhat",
        "test:ci": "hardhat --config hardhat.config.ts test test/*.ts  --network hardhat ",
        "test:zkSyncLocal": "hardhat --config zkSync.config.ts test test/zkSync/*.ts --network zkSyncLocal",
        "lint": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore ./test/**/*.ts",
        "solhint": "solhint ./contracts/**/*.sol",
        "format": "yarn prettier -w ./deploy/**/*.ts ./tasks/**/*.ts ./tests/**/*.ts ./helpers/**/*.ts contracts/**/*.sol ",
        "format:check": "yarn prettier -c ./deploy/**/*.ts ./tasks/**/*.ts ./tests/**/*.ts ./helpers/**/*.ts ./contracts/**/*.sol ",
        "coverage": "pnpm dlx hardhat coverage",
        "coverage:foundry": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
        "generate:types": "pnpm dlx hardhat typechain"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/G7DAO/summon-contracts.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/G7DAO/summon-contracts/issues"
    },
    "homepage": "https://github.com/G7DAO/summon-contracts#readme",
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.1",
        "@swc/core": "^1.3.36",
        "@swc/wasm": "^1.3.36",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.3.4",
        "@types/debug": "^4.1.7",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "chai": "^4.3.7",
        "debug": "^4.3.4",
        "eslint": "^8.34.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-mocha": "^10.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "hardhat": "^2.19.1",
        "prettier": "^2.8.8",
        "prettier-plugin-solidity": "^1.2.0",
        "solhint": "^3.4.0",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.5",
        "ts-node": "^10.9.1",
        "typechain": "^8.3.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@matterlabs/hardhat-zksync-deploy": "^1.0.0",
        "@matterlabs/hardhat-zksync-solc": "^1.0.2",
        "@matterlabs/hardhat-zksync-upgradable": "^1.0.0",
        "@matterlabs/hardhat-zksync-verify": "^1.1.0",
        "@matterlabs/zksync-contracts": "^0.6.1",
        "@nomicfoundation/hardhat-foundry": "^1.1.1",
        "@openzeppelin/contracts": "^4.9.3",
        "@openzeppelin/contracts-upgradeable": "^4.9.3",
        "@openzeppelin/hardhat-upgrades": "^2.4.1",
        "@pythnetwork/pyth-sdk-solidity": "^2.3.0",
        "axios": "^1.6.2",
        "dotenv": "^16.0.3",
        "ethers": "^6.8.1",
        "zksync2-js": "^0.3.0"
    }
}
